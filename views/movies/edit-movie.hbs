<h2>Edit the Movie{{title}}</h2>

<form action="/movies/{{_id}}/edit" method="post">
<label>
    Title
    <input type="text" name="title" value="{{title}}">
</label>

<label>
    Genre
    <input type="genre" name="genre" value="{{genre}}">
</label>

<label>
    Plot
    <textarea type="plot" name="plot" value="{{plot}}"</textarea>
</label>

<select name="celebrities" >
    {{#each getCelebrities}}
    <option value="{{_id}}">{{name}}</option>
    {{/each}}
    </select> 

<button type="submit">Edit</button>
<a href="/">Go back</a>
</form>
